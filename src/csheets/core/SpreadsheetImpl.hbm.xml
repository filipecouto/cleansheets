<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="csheets.core.SpreadsheetImpl" table="Spreadsheet">
        
        <id name="id" column="ID">
            <generator class="native"/>
        </id>
        
        <many-to-one name="workbook" cascade="all" class="csheets.core.Workbook" column="IDWorkbook"/>
        
        <map name="cells">
    		<key column="cellid" />
    		<map-key type="csheets.core.Address" column="CODE"/>
    		<one-to-many class="csheets.core.Cell" />
		</map>
        
        <property name="address" type="csheets.core.Address">
            <column name="address" not-null="true"/>
        </property>"
        
        <property name="content" type="string">
            <column name="content" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>